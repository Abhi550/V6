                    <div style="background-color: rgb(255, 255, 255); width: 90%; height: 100%; float:left; display: grid;
                    grid-template-columns: auto auto auto auto; overflow-y: auto;">  
                              
                      <%for(i=0;i<products.length;i++){
                          if(products[i].quantity > 0 && products[i].seller != gmail ) {%>
                          <div style=" background-color: rgb(226, 166, 14); padding: 15px; width: fit-content; margin: 10px; height: fit-content;">
                               
                            <table>
                              <%imagepath = "/upload/"+ products[i].imagepath %>
                              <tr>
                                  <td colspan="2" align="center"><img src=<%-imagepath%> style="width:200px;height:200px;"></td>
                              </tr>
                              <tr>
                                  <td>Name:</td>
                                  <td><%-products[i].productName%></td>
                              </tr>
                              <tr>
                                  <td>Description:</td>
                                  <td><p style="inline-size: 150px; overflow-wrap: break-word;"><%-products[i].description%></p></td>
                              </tr>
                              <tr>
                                  <td>Available Quantity:</td>
                                  <td><%-products[i].quantity%></td>
                              </tr>
                              <tr>
                                  <td>Price:</td>
                                  <td><%-products[i].price%></td>
                              </tr>
                              <tr>
                                  <td>Type:</td>
                                  <td><%-products[i].type%></td>
                              </tr>
    
                              <tr>
                                <td>
                                  <form method="POST" action="/addToCart">
                                    <input type="text" name="id" value='<%-products[i]._id%>' hidden>
                                    <input type="text" name="imagepath" value='<%-products[i].imagepath%>' hidden>
                                    <input type="text" name="productName" value='<%-products[i].productName%>' hidden>
                                    <input type="text" name="description" value='<%-products[i].description%>' hidden>
                                    Quantity Required : 
                                    <input type="number" name="price" value='<%-products[i].price%>' hidden>
                                    <input type="text" name="seller" value='<%-products[i].seller%>' hidden>
                                   
                                </td>
                                <td>
                                  <input type="number" name="quantity" min="1" max='<%-products[i].quantity%>' required>
          
                                </td>
                              </tr>
                              <tr>
                                <td colspan="2" align="center"><input type="submit" value="Add To Cart">
                                </form>
                              </td>
                              </tr>
                            </table>




                            
                          </div> 
                      <%}}%>
                      



                    </div>  
        </div>  
     
